#!/bin/sh
command -v fnm >/dev/null 2>&1 && eval "$(fnm env --use-on-cd)" || true

# Skip tests if SKIP_TESTS environment variable is set
if [ "$SKIP_TESTS" = "true" ]; then
    echo "â­ï¸  Skipping tests (SKIP_TESTS=true)"
    exit 0
fi

echo "ğŸ§ª Running tests before push..."
echo "ğŸ’¡ To skip tests, use: SKIP_TESTS=true git push"

# Run unit and integration tests
npm run test

# Check test results
if [ $? -ne 0 ]; then
    echo "âŒ Tests failed. Push aborted."
    exit 1
fi

echo "âœ… All tests passed. Push allowed."
